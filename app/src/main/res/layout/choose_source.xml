<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".addpicture.ChooseDialog"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_menu_title"
        style="@style/AppTheme.ChooseSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/tv_add_photo_title"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/capture_image"
        style="@style/AppTheme.ChooseSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_photo_take_picture" />

    <TextView
        android:id="@+id/btn_write_msg"
        style="@style/AppTheme.ChooseSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_photo_pick_from_gallery" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/btn_show_info"
        style="@style/AppTheme.ChooseSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_photo_delete_image" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cancel"
        style="@style/AppTheme.ChooseSourceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_photo_abort" />


</LinearLayout>