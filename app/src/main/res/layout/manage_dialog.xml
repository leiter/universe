<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:paddingBottom="16dp"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/btn_profile"
        style="@style/AppTheme.ChooseSourceText"
        android:textColor="@color/colorPrimaryDark"

        android:drawableStart="@drawable/ic_menu_manage"
        android:drawablePadding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mein Profil" />

    <TextView
        android:id="@+id/btn_write_msg"
        style="@style/AppTheme.ChooseSourceText"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_message"
        android:drawablePadding="24dp"
        android:text="Nachricht schreiben (SMS)" />

    <TextView
        android:id="@+id/btn_show_info"
        style="@style/AppTheme.ChooseSourceText"
        android:textColor="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_info_outline"
        android:drawablePadding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Infos anzeigen" />

    <TextView
        android:id="@+id/btn_log_out"
        style="@style/AppTheme.ChooseSourceText"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="24dp"
        android:text="Ausloggen" />




</LinearLayout>