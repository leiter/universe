<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/orders_root"
            android:background="@color/textColorMain"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginBottom="44dp">

        <ImageView
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_shopping_cart_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="96dp"
                android:padding="8dp"
                android:layout_height="144dp"/>

        <TextView
                android:textSize="32sp"

                android:id="@+id/product_name"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Linda"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/product_description"
                app:layout_constraintEnd_toEndOf="@id/product_name"
                app:layout_constraintStart_toStartOf="@id/product_name"
                app:layout_constraintTop_toBottomOf="@id/product_name"
                android:layout_width="wrap_content"
                android:text="Kartoffeln"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/article_list"
            android:paddingTop="24dp"
            android:layout_below="@id/orders_root"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stackFromEnd="true"
            tools:listitem="@layout/any_idea_item"
            tools:itemCount="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/order_fab"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/article_list"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="parent"/>

</RelativeLayout>