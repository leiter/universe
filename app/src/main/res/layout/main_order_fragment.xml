<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/products"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
            android:id="@+id/toolbar"
            android:padding="4dp"
            android:orientation="horizontal"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/toolbar_start"

                android:layout_centerVertical="true"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_menu_hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <include
                layout="@layout/batch_it"
                android:id="@+id/toolbar_end_2"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_menu_hamburger"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/title"
                tools:text="Linda"
                android:textSize="24dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/toolbar_start"
                android:layout_toStartOf="@id/toolbar_end_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/sub_title"

                android:layout_below="@id/title"
                android:gravity="center"
                android:textColor="@color/black"
                tools:text="Kartoffel"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/orders_root"
            android:background="@color/textColorMain"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="44dp">

        <ImageView
                android:id="@+id/product_image"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_add_shopping_cart_black"
                app:layout_constraintDimensionRatio="W,3:4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <ProgressBar
                android:id="@+id/load_image_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/product_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="@+id/product_image"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/product_image"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="5"
                app:layout_constraintTop_toBottomOf="@id/product_image"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_product"

                android:background="?attr/selectableItemBackground"
                android:visibility="visible"
                android:src="@drawable/ic_add_shopping_cart_black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="96dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:id="@+id/price_name_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:id="@+id/price_amount"
                    android:lines="1"
                    android:textColor="@color/price_text_color"
                    android:textStyle="bold"
                    android:text="0,00â‚¬"
                    android:hint="Preis"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="72dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_name_layout"
                app:layout_constraintTop_toBottomOf="@id/price_name_layout"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/product_image"
                android:layout_marginStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_amount"
                    android:lines="1"
                    android:inputType="numberDecimal"
                    android:digits="0123456789,"
                    android:hint="Menge"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
                android:id="@+id/unit_picker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/product_name_layout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_name_layout"
                app:layout_constraintTop_toTopOf="@+id/product_name_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/article_list"
            app:autoSizeTextType="uniform"
            android:layout_below="@id/orders_root"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stackFromEnd="true"
            tools:listitem="@layout/item_product"
            tools:itemCount="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_products"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:src="@drawable/ic_edit_black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>