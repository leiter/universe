<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    tools:context="com.together.dialogs.BasketFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_basket"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/fab_green"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp"
        android:text="Bestellung senden"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Bestellung"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_menu_title"
        android:layout_marginTop="24dp"
        tools:itemCount="6"
        tools:listitem="@layout/item_basket" />
    <TextView
        tools:text="12,94â‚¬"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/basket_sum"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/order_basket"
        />



</RelativeLayout>
