<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fab_green</item>
        <item name="colorPrimaryDark">@color/fab_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fab_green</item>



    </style>

    <style name="AppTheme.Start" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/fab_green</item>
        <item name="colorPrimaryDark">@color/fab_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/fab_green</item>
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="AppTheme.Licence" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fab_green</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="colorPrimaryDark">@color/fab_green</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ToolbarTheme.Title</item>
        <item name="android:textColorPrimary">@color/fab_green</item>

    </style>

    <style name="MarketPickerTab" parent="TextAppearance.Design.Tab">
        <item name="android:lines">3</item>
        <item name="android:minLines">3</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="ToolbarTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">2sp</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Fill the screen -->
        <item name="android:layout_width">match_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>

        <!-- Just to prove it's working -->
        <item name="android:background">#ffffff</item>
    </style>


